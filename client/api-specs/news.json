        "type": "string",
        "enum": [
          "tech",
          "programming",
          "interview"
        ],
        "title": "NewsCategory",
        "description": "News categories"
      },
      "NewsItem": {
        "properties": {
          "id": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Id"
          },
          "title": {
            "type": "string",
            "title": "Title",
            "description": "News title"
          },
          "description": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Description",
            "description": "News description"
          },
          "url": {
            "type": "string",
            "maxLength": 2083,
            "minLength": 1,
            "format": "uri",
            "title": "Url",
            "description": "News URL"
          },
          "source_name": {
            "type": "string",
